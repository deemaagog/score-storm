{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "incremental": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // "rootDir": "./src",
    "outDir": "./lib",
    "composite": true
  },
  "references": [
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/canvas-renderer"
    }
  ],
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
